{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nlp2cmd.dev/schemas/app2schema.appspec.schema.json",
  "title": "AppSpec",
  "type": "object",
  "required": ["format", "version", "app", "actions"],
  "properties": {
    "format": {"const": "app2schema.appspec"},
    "version": {"type": "integer", "minimum": 1},
    "app": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {"type": "string", "minLength": 1},
        "kind": {"type": "string"},
        "source": {"type": "string"},
        "metadata": {"type": "object", "additionalProperties": true}
      },
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/action"}
    },
    "metadata": {"type": "object", "additionalProperties": true}
  },
  "additionalProperties": false,
  "definitions": {
    "param": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["string", "integer", "number", "boolean", "object", "array", "any"]
        },
        "required": {"type": "boolean", "default": false},
        "description": {"type": "string"},
        "default": {},
        "enum": {"type": "array"},
        "pattern": {"type": "string"},
        "location": {
          "type": "string",
          "enum": ["path", "query", "header", "body", "arg", "option", "unknown"],
          "default": "unknown"
        }
      },
      "additionalProperties": true
    },
    "dsl": {
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["sql", "graphql", "dom", "shell", "http", "python", "gui"]
        },
        "dialect": {"type": "string"},
        "output_format": {
          "type": "string",
          "enum": ["raw", "json", "table", "text", "html"],
          "default": "raw"
        },
        "template": {"type": "string"}
      },
      "additionalProperties": true
    },
    "match": {
      "type": "object",
      "properties": {
        "patterns": {"type": "array", "items": {"type": "string"}},
        "examples": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": false
    },
    "executor": {
      "type": "object",
      "required": ["kind"],
      "properties": {
        "kind": {
          "type": "string",
          "enum": ["shell", "http", "sql", "graphql", "dom", "playwright", "python", "custom"]
        },
        "config": {"type": "object", "additionalProperties": true}
      },
      "additionalProperties": false
    },
    "action": {
      "type": "object",
      "required": ["id", "type", "dsl"],
      "properties": {
        "id": {"type": "string", "minLength": 1},
        "type": {
          "type": "string",
          "enum": ["sql", "graphql", "dom", "shell", "http", "python", "gui"]
        },
        "description": {"type": "string"},
        "dsl": {"$ref": "#/definitions/dsl"},
        "params": {
          "type": "object",
          "additionalProperties": {"$ref": "#/definitions/param"}
        },
        "schema": {"type": "object", "additionalProperties": true},
        "match": {"$ref": "#/definitions/match"},
        "executor": {"$ref": "#/definitions/executor"},
        "metadata": {"type": "object", "additionalProperties": true},
        "tags": {"type": "array", "items": {"type": "string"}}
      },
      "additionalProperties": false
    }
  }
}
