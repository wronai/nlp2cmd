{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://nlp2cmd.dev/schemas/nlp2cmd.action_ir.schema.json",
  "title": "ActionIR",
  "type": "object",
  "required": ["format", "version", "action_id", "dsl"],
  "properties": {
    "format": {"const": "nlp2cmd.action_ir"},
    "version": {"type": "integer", "minimum": 1},
    "action_id": {"type": "string", "minLength": 1},
    "dsl": {"type": "string"},
    "dsl_kind": {
      "type": "string",
      "enum": ["sql", "graphql", "dom", "shell", "http", "python", "gui"]
    },
    "params": {"type": "object", "additionalProperties": true},
    "output_format": {
      "type": "string",
      "enum": ["raw", "json", "table", "text", "html"],
      "default": "raw"
    },
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "explanation": {"type": "string"},
    "metadata": {"type": "object", "additionalProperties": true}
  },
  "additionalProperties": false
}
