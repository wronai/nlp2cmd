{
  "$schema": "shell_execution_policy.v1",
  "allow_sudo": false,
  "allow_pipes": false,
  "allowlist": [],
  "blocked_regex": [
    "\\brm\\s+-rf\\s+/\\b",
    "\\brm\\s+-rf\\s+/\\*\\b",
    "\\bmkfs\\b",
    "\\bdd\\s+if=/dev/zero\\b",
    ":\\(\\)\\{:\\|:&\\};:"
  ],
  "require_confirm_regex": [
    "\\brm\\b",
    "\\brmdir\\b",
    "\\bkill\\b",
    "\\bkillall\\b",
    "\\bshutdown\\b",
    "\\breboot\\b",
    "\\bsystemctl\\s+stop\\b",
    "\\bdocker\\s+rm\\b",
    "\\bdocker\\s+rmi\\b"
  ]
}
